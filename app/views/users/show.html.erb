<h2>プロフィール</h2>

<div class="profile-section">
  <p>名前：<%= @user.name %></p>
  <%= link_to "編集", edit_user_path %>
</div>

<div class="profile-section">
  <p>性別：<%= @user.gender %></p>
  <%= link_to "編集", edit_user_path %>
</div>

<div class="profile-section">
  <p>目標：<%= @user.goal.presence || "未設定" %></p>
  <%= link_to "編集", edit_user_path %>
</div>

<hr>

<div class="profile-section">
  <p>メールアドレス：<%= @user.email %></p>
  <%= link_to "変更", account_edit_user_path %>
</div>

<div class="profile-section">
  <p>パスワード：********</p>
  <%= link_to "変更", account_edit_user_path %>
</div>

<hr>

<div class="actions">
  <%= link_to "ログアウト", destroy_user_session_path,
        data: { turbo_method: :delete, turbo_confirm: "ログアウトしますか？" } %>
</div>
