<div class="container my-4">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">

      <div class="card bg-dark text-light shadow-sm border-secondary">
        <div class="card-body">

          <h4 class="mb-3 pb-2 border-bottom">プロフィール編集</h4>

          <%= form_with model: @user, url: user_path, method: :patch, local: true do |f| %>

            <% if @user.errors.any? %>
              <%= render "shared/error_messages", resource: @user %>
            <% end %>

            <div class="mb-3">
              <%= f.label :name, "名前", class: "form-label" %>
              <%= f.text_field :name, class: "form-control bg-dark text-light border-secondary" %>
            </div>

            <div class="mb-3">
              <%= f.label :gender, "性別", class: "form-label" %>
              <%= f.select :gender,
                           User.genders.keys.map { |k| [k, k] },
                           {},
                           class: "form-select bg-dark text-light border-secondary" %>
            </div>

            <div class="mb-3">
              <%= f.label :goal, "目標", class: "form-label" %>
              <%= f.text_area :goal, rows: 3, class: "form-control bg-dark text-light border-secondary" %>
            </div>

            <div class="d-flex justify-content-between mt-4">
              <%= link_to "戻る", dashboard_profile_path, class: "btn btn-secondary" %>
              <%= f.submit "更新する", class: "btn btn-primary" %>
            </div>

          <% end %>

        </div>
      </div>

    </div>
  </div>
</div>
