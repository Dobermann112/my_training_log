<div class="container my-4">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">

      <!-- メールアドレス変更カード -->
      <div class="card shadow-sm border-secondary mb-4">
        <div class="card-body">
          <h4 class="mb-3 pb-2 border-bottom">メールアドレスの変更</h4>

          <%= form_with model: current_user,
                        url: users_update_email_path,
                        method: :patch,
                        local: true do |f| %>

            <div class="mb-3">
              <%= f.label :email, "新しいメールアドレス", class: "form-label" %>
              <%= f.email_field :email, value: current_user.email, class: "form-control bg-transparent text-light border-secondary" %>
            </div>

            <div class="mb-4">
              <%= f.label :current_password, "現在のパスワード（確認）", class: "form-label" %>
              <%= f.password_field :current_password, class: "form-control bg-transparent text-light border-secondary" %>
            </div>

            <div class="d-grid">
              <%= f.submit "メールアドレスを更新", class: "btn btn-primary" %>
            </div>

          <% end %>
        </div>
      </div>

      <!-- パスワード変更カード -->
      <div class="card shadow-sm border-secondary mb-4">
        <div class="card-body">
          <h4 class="mb-3 pb-2 border-bottom">パスワードの変更</h4>

          <%= form_with model: current_user,
                        url: users_update_password_path,
                        method: :patch,
                        local: true do |f| %>

            <div class="mb-3">
              <%= f.label :password, "新しいパスワード", class: "form-label" %>
              <%= f.password_field :password, class: "form-control bg-transparent text-light border-secondary" %>
            </div>

            <div class="mb-3">
              <%= f.label :password_confirmation, "新しいパスワード（確認）", class: "form-label" %>
              <%= f.password_field :password_confirmation, class: "form-control bg-transparent text-light border-secondary" %>
            </div>

            <div class="mb-4">
              <%= f.label :current_password, "現在のパスワード（確認）", class: "form-label" %>
              <%= f.password_field :current_password, class: "form-control bg-transparent text-light border-secondary" %>
            </div>

            <div class="d-grid">
              <%= f.submit "パスワードを更新", class: "btn btn-primary" %>
            </div>

          <% end %>
        </div>
      </div>

      <!-- アカウント削除 -->
      <div class="text-center mt-4 mb-4">
        <%= link_to "アカウントを削除する",
                    registration_path(:user),
                    data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" },
                    class: "text-danger small text-decoration-none" %>
      </div>

      <!-- 戻るボタン -->
      <div class="text-center mb-4">
        <%= link_to "戻る", dashboard_profile_path, class: "btn btn-secondary w-100" %>
      </div>

    </div>
  </div>
</div>
