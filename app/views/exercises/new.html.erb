<div class="d-flex justify-content-between align-items-center mb-4">
  <h2 class="mb-0"><%= @body_part.name %> の種目を新規登録</h2>

  <%= link_to "種目一覧へ",
              body_part_exercises_path(@body_part, date: params[:date]),
              class: "btn btn-outline-light btn-sm" %>
</div>

<div class="exercise-title-card p-4 mb-4">
  <%= render "form", exercise: @exercise %>
</div>

<div class="d-flex gap-2">
  <%= link_to "種目選択に戻る",
              select_exercise_workouts_path(date: params[:date]),
              class: "btn btn-outline-light" %>
</div>
