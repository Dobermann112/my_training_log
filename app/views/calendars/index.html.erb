<div data-controller="calendar">
  <div id="calendar"></div>
</div>

<div class="mt-4">

  <% if @today_workout.present? %>
    <%= link_to workout_path(@today_workout),
                class: "btn btn-primary w-100 mb-3" do %>
      今日のトレーニングを記録する
    <% end %>
  <% else %>
    <%= link_to select_exercise_workouts_path(date: @today),
                class: "btn btn-primary w-100 mb-3" do %>
      今日のトレーニングを記録する
    <% end %>
  <% end %>

</div>

<% if @today_workout.present? %>
  <%= render "calendars/today_workout", workout: @today_workout %>
<% end %>
