<div class="container my-4">

  <!-- プロフィール情報カード -->
  <div class="card shadow-sm border-secondary mb-4">
    <div class="card-body">
      <h4 class="mb-3 pb-2 border-bottom">プロフィール</h4>
        <div class="mb-3">
          <p><strong>名前：</strong> <%= @user.name %></p>
        </div>

        <div class="mb-3">
          <p><strong>性別：</strong> <%= @user.gender.presence || "未設定" %></p>
        </div>

        <div class="mb-3">
          <p><strong>目標：</strong> <%= @user.goal.presence || "未設定" %></p>
        </div>

        <div class="mb-4">
          <p><strong>メールアドレス：</strong> <%= @user.email %></p>
        </div>

        <div class="text-end mt-3">
          <%= link_to "プロフィール編集", edit_dashboard_settings_profile_path, class: "btn btn-primary" %>
        </div>
    </div>
  </div>

  <!-- アカウント設定カード -->
  <div class="card shadow-sm border-secondary">
    <div class="card-body">
      <h4 class="mb-3 pb-2 border-bottom">アカウント設定</h4>
        <div class="d-grid gap-3">

          <%= link_to "アカウント設定", dashboard_settings_account_path, class: "btn btn-secondary w-100" %>

          <%= link_to "ログアウト",
                      destroy_user_session_path,
                      data: { turbo_method: :delete, turbo_confirm: "ログアウトしますか？" },
                      class: "btn btn-outline-light w-100" %>

        </div>
    </div>
  </div>
</div>
