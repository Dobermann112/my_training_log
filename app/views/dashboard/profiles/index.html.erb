<div class="container my-3">

  <!-- アバター全体 -->
  <div class="avatar-block">

    <!-- ヘッダー行（タイトル + アクション） -->
    <div class="avatar-header">
      <div class="avatar-title">
        <h5>Training Avatar</h5>
        <span class="avatar-subtitle">現在のアバターステータス</span>
      </div>

        <a href="#"
           data-bs-toggle="modal"
           data-bs-target="#help-avatar-modal"
           class="avatar-info-btn"
           aria-label="アバターについて">
          <i class="bi bi-info-circle"></i>
        </a>

        <%= link_to profiles_path,
            class: "avatar-detail-btn",
            aria: { label: "プロフィール詳細" } do %>
          <i class="bi bi-gear-fill"></i>
        <% end %>
      </div>

    <!-- アバター表示エリア -->
    <div class="avatar-section">
      <div class="avatar-background"></div>
      <div class="avatar-canvas-wrapper">
        <div id="avatar-root"></div>
      </div>
    </div>

  </div>
</div>

<%= render "shared/help/avatar" %>