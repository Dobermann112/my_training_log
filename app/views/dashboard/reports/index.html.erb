<div data-controller="charts">
  <!-- Summaryカード群 -->
  <div class="d-flex justify-content-between gap-2 mb-3 text-center flex-wrap">
    <div class="flex-fill card shadow-sm bg-dark text-light border-secondary summary-card">
      <div class="card-body py-2">
        <h6 class="small mb-1">総セット</h6>
        <h4 class="mb-0 fw-bold" data-charts-target="summarySets">0</h4>
      </div>
    </div>

    <div class="flex-fill card shadow-sm bg-dark text-light border-secondary summary-card">
      <div class="card-body py-2">
        <h6 class="small mb-1">総レップ</h6>
        <h4 class="mb-0 fw-bold" data-charts-target="summaryReps">0</h4>
      </div>
    </div>

    <div class="flex-fill card shadow-sm bg-dark text-light border-secondary summary-card">
      <div class="card-body py-2">
        <h6 class="small mb-1">連続日数</h6>
        <h4 class="mb-0 fw-bold" data-charts-target="summaryStreak">0</h4>
      </div>
    </div>
  </div>

  <!-- セレクタ -->
  <div class="d-flex justify-content-end gap-2 mb-4 flex-wrap">
    <select
      data-charts-target="range"
      data-action="change->charts#changeRange"
      class="form-select w-auto"
    >
      <option value="week">週</option>
      <option value="month" selected>月</option>
      <option value="year">年</option>
    </select>

    <select
      data-charts-target="bodyPart"
      data-action="change->charts#changeBodyPart"
      class="form-select w-auto"
    >
      <option value="">全身</option>
      <% BodyPart.all.each do |bp| %>
        <option value="<%= bp.id %>"><%= bp.name %></option>
      <% end %>
    </select>
  </div>

  <!-- グラフ群 -->
<div class="row g-3 mt-2">
  <div class="col-12">
    <div class="card shadow-sm bg-dark text-light border-secondary">
      <div class="card-body p-3" data-charts-target="line"></div>
    </div>
  </div>

  <div class="col-md-6 col-12">
    <div class="card shadow-sm bg-dark text-light border-secondary h-100">
      <div class="card-body p-3" data-charts-target="pie"></div>
    </div>
  </div>

  <div class="col-md-6 col-12">
    <div class="card shadow-sm bg-dark text-light border-secondary h-100">
      <div class="card-body p-3" data-charts-target="bar"></div>
    </div>
  </div>
</div>
