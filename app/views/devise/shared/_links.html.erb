<div class="d-grid gap-2">

  <% if controller_name != 'sessions' %>
    <%= link_to "ログインはこちら",
      new_session_path(resource_name),
      class: "btn btn-secondary" %>
  <% end %>

  <% if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "新規登録はこちら",
      new_registration_path(resource_name),
      class: "btn btn-secondary" %>
  <% end %>

  <% if devise_mapping.recoverable? &&
        controller_name != 'passwords' &&
        controller_name != 'registrations' %>
    <%= link_to "パスワードをお忘れの方はこちら",
      new_password_path(resource_name),
      class: "btn btn-secondary" %>
  <% end %>

  <% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "確認メールを再送信する",
      new_confirmation_path(resource_name),
      class: "btn btn-secondary" %>
  <% end %>

  <% if devise_mapping.lockable? &&
        resource_class.unlock_strategy_enabled?(:email) &&
        controller_name != 'unlocks' %>
    <%= link_to "アカウントロック解除メールを再送信する",
      new_unlock_path(resource_name),
      class: "btn btn-secondary" %>
  <% end %>

  <% if devise_mapping.omniauthable? %>
    <% resource_class.omniauth_providers.each do |provider| %>
      <%= button_to "#{OmniAuth::Utils.camelize(provider)}でログイン",
        omniauth_authorize_path(resource_name, provider),
        data: { turbo: false },
        class: "btn btn-secondary" %>
    <% end %>
  <% end %>

</div>
