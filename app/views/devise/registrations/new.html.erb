<%= render "devise/shared/auth_container" do %>
  <h2 class="text-center mb-4 text-warning fw-semibold">新規登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="mb-3">
      <%= f.label :name, "名前", class: "form-label" %>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control bg-dark text-light border-secondary" %>
    </div>

    <div class="mb-3">
      <%= f.label :email, "メールアドレス", class: "form-label" %>
      <%= f.email_field :email, autocomplete: "email", class: "form-control bg-dark text-light border-secondary" %>
    </div>

    <div class="mb-3">
      <%= f.label :password, "パスワード（6文字以上）", class: "form-label" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control bg-dark text-light border-secondary" %>
    </div>

    <div class="mb-4">
      <%= f.label :password_confirmation, "パスワード（確認）", class: "form-label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control bg-dark text-light border-secondary" %>
    </div>

    <div class="d-grid">
      <%= f.submit "登録する", class: "btn btn-warning text-dark fw-semibold" %>
    </div>
  <% end %>

  <div class="text-center mt-4">
    <%= render "devise/shared/links" %>
  </div>
<% end %>
