<%= render "devise/shared/auth_container" do %>
  <h2 class="text-center mb-4 text-warning fw-semibold">アカウント情報の編集</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <div class="mb-3">
      <%= f.label :name, "名前", class: "form-label" %>
      <%= f.text_field :name, class: "form-control bg-dark text-light border-secondary" %>
    </div>

    <div class="mb-3">
      <%= f.label :email, "メールアドレス", class: "form-label" %>
      <%= f.email_field :email, class: "form-control bg-dark text-light border-secondary" %>
    </div>

    <hr class="border-warning">

    <h5 class="text-warning mb-3">パスワードの変更</h5>

    <div class="mb-3">
      <%= f.label :password, "新しいパスワード", class: "form-label" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control bg-dark text-light border-secondary" %>
    </div>

    <div class="mb-3">
      <%= f.label :password_confirmation, "新しいパスワード（確認）", class: "form-label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control bg-dark text-light border-secondary" %>
    </div>

    <div class="mb-4">
      <%= f.label :current_password, "現在のパスワード（確認のため）", class: "form-label" %>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control bg-dark text-light border-secondary" %>
    </div>

    <div class="d-grid">
      <%= f.submit "更新する", class: "btn btn-warning text-dark fw-semibold" %>
    </div>
  <% end %>

  <div class="text-center mt-4">
    <%= link_to "アカウントを削除する", registration_path(resource_name), data: { turbo_method: :delete, confirm: "本当に削除しますか？" }, class: "text-danger small text-decoration-none" %>
  </div>
<% end %>
