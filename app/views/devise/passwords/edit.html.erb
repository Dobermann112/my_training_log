<%= render "devise/shared/auth_container" do %>
  <h2 class="text-center mb-4 text-warning fw-semibold">新しいパスワード設定</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.hidden_field :reset_password_token %>

    <div class="mb-3">
      <%= f.label :password, "新しいパスワード", class: "form-label" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control bg-dark text-light border-secondary" %>
    </div>

    <div class="mb-4">
      <%= f.label :password_confirmation, "新しいパスワード（確認）", class: "form-label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control bg-dark text-light border-secondary" %>
    </div>

    <div class="d-grid">
      <%= f.submit "パスワードを更新", class: "btn btn-warning text-dark fw-semibold" %>
    </div>
  <% end %>

  <div class="text-center mt-4">
    <%= render "devise/shared/links" %>
  </div>
<% end %>
