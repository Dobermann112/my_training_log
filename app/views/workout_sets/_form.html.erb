<%= form_with(model: [@workout, @workout_set], local: true, class: "mt-3") do |f| %>
  <% if @workout_set.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% @workout_set.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= render "exercise_select", f: f, exercises_by_part: @exercises_by_part %>

  <div class="form-floating mb-3">
    <%= f.number_field :weight, step: 0.5, class: "form-control", placeholder: "重量(kg)" %>
    <%= f.label :weight, "重量(kg)" %>
  </div>

  <div class="form-floating mb-3">
    <%= f.number_field :reps, class: "form-control", placeholder: "回数" %>
    <%= f.label :reps, "回数" %>
  </div>

  <div class="form-floating mb-3">
    <%= f.text_area :memo, class: "form-control", placeholder: "メモ", rows: 2 %>
    <%= f.label :memo, "メモ" %>
  </div>

  <%= f.submit "保存", class: "btn btn-warning" %>
<% end %>
