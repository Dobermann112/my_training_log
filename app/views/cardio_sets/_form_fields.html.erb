<div class="d-flex gap-3">
  <div class="flex-fill">
    <label class="form-label">距離(km)</label>
    <%= text_field_tag "",
          set&.distance,
          class: "form-control",
          inputmode: "decimal",
          data: { cardio_set_create_target: "distance",
                  action: "input->cardio-set-create#saveDraft" } %>
  </div>

  <div class="flex-fill">
    <label class="form-label">時間(分)</label>
    <%= text_field_tag "",
          set&.duration,
          class: "form-control",
          inputmode: "decimal",
          data: { cardio_set_create_target: "duration",
                  action: "input->cardio-set-create#saveDraft" } %>
  </div>
</div>

<div class="d-flex gap-3 mt-2">
  <div class="flex-fill">
    <label class="form-label">消費カロリー(kcal)</label>
    <%= text_field_tag "",
          set&.calories,
          class: "form-control",
          inputmode: "decimal",
          data: { cardio_set_create_target: "calories",
                  action: "input->cardio-set-create#saveDraft" } %>
  </div>

  <div class="flex-fill">
    <% pace_min, pace_sec = pace_parts(set&.pace) %>
    <label class="form-label">ペース(/km)</label>

    <div class="form-control w-100 d-flex align-items-center justify-content-center gap-2 pace-box"
        data-cardio-set-create-target="paceWrapper">
      <%= text_field_tag "",
            pace_min,
            class: "border-0 bg-transparent p-0 m-0 text-light text-end pace-min-input",
            inputmode: "numeric",
            placeholder: "0",
            data: {
              cardio_set_create_target: "paceMin",
              action: "input->cardio-set-create#onPaceInput blur->cardio-set-create#onPaceBlur"
            } %>

      <span class="text-secondary">:</span>

      <%= text_field_tag "",
            pace_sec,
            class: "border-0 bg-transparent p-0 m-0 text-light text-end pace-sec-input",
            inputmode: "numeric",
            placeholder: "00",
            data: {
              cardio_set_create_target: "paceSec",
              action: "input->cardio-set-create#onPaceInput blur->cardio-set-create#onPaceBlur"
            } %>
    </div>

    <div class="invalid-feedback d-block mt-1"
        data-cardio-set-create-target="paceError"
        style="display:none;"></div>
  </div>
</div>

<div class="mt-2">
  <label class="form-label">メモ</label>
  <%= text_area_tag "",
        set&.memo,
        rows: 1,
        class: "form-control",
        data: { cardio_set_create_target: "memo",
                action: "input->cardio-set-create#saveDraft" } %>
</div>
